---
import { Image } from "astro:assets";
import astronautImage from "~/assets/astronaut.png";
import HeroImage from "~/components/hero-image.astro";
import Starfield from "~/components/starfield.astro";
---

<section class="relative h-screen bg-transparent flex items-center justify-center">
  <Starfield />

  <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
    <HeroImage />
  </div>

  <div class="relative flex flex-col items-center justify-center text-center z-10">
    <!-- Model Viewer -->
    <script type="module" src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"></script>
    <model-viewer src="LOGO_12.glb" ar ar-modes="webxr scene-viewer quick-look" camera-controls tone-mapping="neutral" poster="poster.webp" shadow-intensity="0.45" auto-rotate min-camera-orbit="auto 0deg auto" max-camera-orbit="auto 0deg auto"> </model-viewer>
    <!-- Text Content -->
    <div class="text-center w-full">
      <div class="gradient-text font-extrabold tracking-tighter text-6xl md:text-8xl w-full max-w-4xl mx-auto leading-tight">
        Welcome to
        <br /> Kolkative
        <span class="block mt-0.5">
          <a
            href="https://hub.kolkative.my.id"
            target="_blank"
            rel="noopener"
            class="inline-block px-6 py-2 border border-primary rounded-full font-semibold bg-white/10 hover:bg-primary hover:text-white transition-colors duration-200 text-sm tracking-widest"
          >
            GO TO HUB
          </a>
        </span>
      </div>
    </div>
  </div>
</section>

<!-- Pindahkan script ke bawah -->
<script type="module" src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"></script>


<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  #planet {
    animation: float linear 2.5s infinite alternate;
  }

  @media (prefers-reduced-motion: reduce) {
    #planet {
      @apply animate-none;
    }

    :global(#starfield) {
      @apply hidden;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
</style>
